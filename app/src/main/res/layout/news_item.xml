<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_margin="10dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_centerInParent="true"
        android:id="@+id/news_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        android:layout_margin="20dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/news_item_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="10dp"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                tools:text="THIS IS THE HEADING" />

            <TextView
                android:id="@+id/news_item_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                tools:text="This is where the body of the text goes" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/news_item_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/News_items_footer"
                    android:textColor="@android:color/holo_red_light"
                    tools:text="US NEWS"/>

                <TextView
                    android:id="@+id/news_item_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/News_items_footer"
                    tools:text="author Name"/>

                <TextView
                    android:id="@+id/news_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/News_items_footer"
                    android:textColor="@android:color/holo_blue_dark"
                    tools:text="12-12-1244"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
